{
  "$id": "https://gcn.nasa.gov/schema/main/gcn/notices/fermi/gbm/template.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fermi/GBM template -- TODO: Edit this title.",
  "description": "A template for Fermi GCN schemas.  TODO: Edit this description and the $id to match the title.",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../core/AdditionalInfo.schema.json"
    },
    {
