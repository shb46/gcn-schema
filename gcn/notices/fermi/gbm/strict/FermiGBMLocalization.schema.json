{
  "$id": "https://gcn.nasa.gov/schema/main/gcn/notices/fermi/gbm/strict/FermiGBMLocalization.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Localization",
  "description": "Localization of transient",
  "allOf": [
    {
      "not": {
        "required": ["instrument_semimajor_angle"]
      }
    },
    {
      "properties": {
        "ra_dec_error": {
          "type": "number",
          "description": "Uncertainty region described as a circle with a radius [deg]."
        }
      }
    }
  ],
  "dependentRequired": {
    "healpix_file": ["ra"],
    "ra": [
      "dec",
      "ra_dec_error",
      "containment_probability",
      "systematic_included",
      "instrument_phi",
      "instrument_theta",
      "healpix_url"
    ],
    "dec": ["ra"],
    "ra_dec_error": ["ra"],
    "containment_probability": ["ra"],
    "systematic_included": ["ra"],
    "instrument_phi": ["ra"],
    "instrument_theta": ["ra"],
    "healpix_url": ["ra"]
  }
}
