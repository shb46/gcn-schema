{
  "$id": "https://gcn.nasa.gov/schema/main/gcn/notices/fermi/gbm/FermiGBMGroundPos.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GCN Schema for Fermi GBM Ground Position Notices",
  "description": "This schema is used to report the results of a Fermi GBM localization computed by ground software.",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../AdditionalInfo.schema.json"
    },
    {
      "$ref": "../../Alert.schema.json"
    },
    {
      "$ref": "../../DateTime.schema.json"
    },
    {
      "$ref": "../../Event.schema.json"
    },
    {
      "$ref": "../../GeoLocBase.schema.json"
    },
    {
      "$ref": "../../Localization.schema.json"
    },
    {
      "$ref": "../../Reporter.schema.json"
    },
    {
      "$ref": "../../Statistics.schema.json"
    }
  ],
  "properties": {
    "notice_type": {
      "type": "string",
      "description": "Notice title"
    },
    "ground_generated_notice": {
      "type": "boolean",
      "description": "Some notices, designed to be generated in flight, can be issued on the ground."
    },
    "hitl": {
      "type": "boolean",
      "description": "Human in the looop"
    },
    "localization_algorithm": {
      "type": "string",
      "description": "Version number"
    },
    "localization_energy_range": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Not to be confused with the trigger energy range."
    },
    "galactic_l": {
      "type": "number",
      "description": "Galactic longitude [deg]"
    },
    "galactic_b": {
      "type": "number",
      "description": "Galactic altitude [deg]"
    },
    "sun_distance": {
      "type": "number",
      "description": "Event-Sun angle [deg]"
    },
    "hehi": {
      "enum": [
        false,
        true,
        "UNCERTAIN"
      ],
      "description": "High energy, high intensity event"
    },
    "in_lat_fov": {
      "enum": [
        false,
        true,
        "UNCERTAIN"
      ],
      "description": "The event was localizad in the LAT field of view."
    },
    "duration_class": {
      "enum": [
        "SHORT",
        "LONG",
        "UNCERTAIN"
      ],
      "description": "Long vs. short event"
    }
  }
}
